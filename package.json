  },
  "homepage": "https://github.com/customerio/customerio-node",
  "dependencies": {
    "request": "^2.58.0",
    "rsvp": "^3.0.18",
    "sinon": "^1.15.4"
  },
  "devDependencies": {
    "blanket": "^1.1.7",
    "chai": "^3.1.0",
    "chai-as-promised": "^5.1.0",
    "mocha": "^2.2.5"
  },
  "config": {
    "blanket": {
